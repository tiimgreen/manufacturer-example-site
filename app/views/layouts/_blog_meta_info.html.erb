<!-- Schema.org markup for Google+ -->
<meta itemprop="name" content="<%= @blog_article.title %>">
<meta itemprop="description" content="<%= @blog_article.short_description %>">
<meta itemprop="image" content="<%= root_url[0...-1] + @blog_article.image.url %>">

<!-- Twitter Card data -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@twitter">
<meta name="twitter:title" content="<%= @blog_article.title %>">
<meta name="twitter:description" content="<%= @blog_article.short_description %>">
<meta name="twitter:creator" content="@twitter">
<!-- Twitter summary card with large image must be at least 280x150px -->
<meta name="twitter:image:src" content="<%= root_url[0...-1] + @blog_article.image.url %>">

<!-- Open Graph data -->
<meta property="og:title" content="<%= @blog_article.title %>" />
<meta property="og:type" content="article" />
<meta property="og:url" content="<%= request.original_url %>" />
<meta property="og:image" content="<%= root_url[0...-1] + @blog_article.image.url %>" />
<meta property="og:description" content="<%= @blog_article.short_description %>" />
<meta property="og:site_name" content="The Company" />
<meta property="article:published_time" content="<%= @blog_article.created_at %>" />
<meta property="article:modified_time" content="<%= @blog_article.updated_at %>" />
<meta property="article:section" content="Article Section" />
<meta property="article:tag" content="Article Tag" />
