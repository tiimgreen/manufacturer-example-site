<section class="section-4">
  <div class="container">
    <%= form_for @product_specification, class: 'form-horizontal' do |f| %>
      <div class="form-group">
        <%= f.label :key, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :key, class: 'form-control', placeholder: 'Key' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :value, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :value, class: 'form-control', placeholder: 'Value' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Add Specification" %>
        </div>
      </div>
    <% end %>
  </div>
</section>
