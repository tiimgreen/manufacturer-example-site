<section class="section-4">
  <div class="container">
    <%= form_for [@product, @product_specification], class: 'form' do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <%= f.label :key, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :key, auto_focus: true, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :value, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :value, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit 'Update', class: 'btn btn-bg bg-sea form-button' %>
        </div>
      </div>
    <% end %>
  </div>
</section>
