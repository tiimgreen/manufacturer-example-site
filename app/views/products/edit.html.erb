<section class="section-4 edit-product-form-container">
  <div class="container">
    <%= form_for @product, class: 'form-horizontal' do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <label class="col-sm-2 control-label">Author</label>
        <div class="col-sm-10">
          <p class="form-control-static">
            <%= current_user.name %>
          </p>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Images</label>
        <div class="col-sm-10">
          <% @product.product_images.each do |product_image| %>
            <div class="image-container">
              <%= link_to product_edit_image_path(@product, product_image)do %>
                <%= image_tag product_image.image.url, width: 100, data: { toggle: :tooltip, placement: :top }, title: 'Click to Edit Image'  %>
              <% end %>

              <%= link_to 'Delete Image', product_delete_image_path(@product, product_image), class: 'text-danger', method: :delete %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :name, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Title' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :introduction, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :introduction, rows: 8, class: 'form-control', placeholder: 'Product Introduction' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :description, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: 'Product Description' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Update Product", class: 'btn btn-bg bg-sea' %>
        </div>
      </div>
    <% end %>
  </div>
</section>
