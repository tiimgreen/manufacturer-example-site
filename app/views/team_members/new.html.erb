<section class="section-4">
  <div class="container">
    <%= form_for @team_member, class: 'form' do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <%= f.label :first_name, 'First Name', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :first_name, auto_focus: true, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :last_name, 'Last Name', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :contact_email, 'Contact Email', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.email_field :contact_email, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :job_title, 'Job Title', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :job_title, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :short_info, 'Short Info', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :short_info, rows: 5, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :order, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :order, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :avatar, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.file_field :avatar, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit 'Create', class: 'btn btn-bg bg-sea form-button' %>
        </div>
      </div>
    <% end %>
  </div>
</section>
